datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Users {
  id           Int      @id @default(autoincrement())
  name         String
  nationalCode String
  description  String
  lat          Float
  lng          Float
  pathId       Int
  createdAt    DateTime @default(now())
}

model Paths {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  path        Json
  createdAt   DateTime @default(now())
}

model Admin {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}
